<% layout("/layouts/boilerplate.ejs") -%>
<div
  class="box"
  style="
    background-image: url(https://images.unsplash.com/photo-1719179512969-84e9863abbf2?q=80&w=1856&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D);
  "
>
  <div class="signup-card">
    <h1>SignUp</h1>
    <form action="#">
      <label for="name">Your Name</label>
      <input type="text" name="name" id="name" />
      <label for="email">Email Id</label>
      <input type="email" name="email" id="email" />
      <label for="password">Password</label>
      <input type="password" name="password" id="password" />
      <button class="btn login_signup-btn" type="submit">
        SignUp &nbsp;<i class="fa-solid fa-arrow-right"></i>
      </button>
    </form>
    <a href="/user/Login">Already Have An Account? Login</a>
  </div>
</div>
